<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="INFO" debug="true">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p [%c] %m%n"/>
        </Console>
        <RollingFile name="ServerDailyRollingFile" filename="logs/platform/app.log"
                     filePattern="logs/plcenter/$${date:yyyy-MM}/pl-%d{yyyy-MM-dd-HH}-%i.log">
            <PatternLayout>
                <pattern>%d %t- %c{1}[%p]%m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="24" modulate="true"/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ServerDailyRollingFile"/>
        </Root>
    </Loggers>
</Configuration>